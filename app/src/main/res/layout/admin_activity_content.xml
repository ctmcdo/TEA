<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:showIn="@layout/admin_activity_main" tools:context=".AdminActivity">

<EditText
    android:id="@+id/eventName"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:drawablePadding="15dp"
    android:drawableLeft="@drawable/calendar"
    android:paddingBottom="20dp"
    android:hint="Event Name"
    />

<TextView
    android:id="@+id/startDate"
    android:paddingTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/eventName"
    android:drawablePadding="15dp"
    android:drawableLeft="@drawable/time"
    android:textSize="17sp"
    android:paddingBottom="20dp"
    android:gravity="center"
    android:textColor="#000000"
    />

<TextView
    android:id="@+id/startTime"
    android:paddingTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/eventName"
    android:textSize="17sp"
    android:paddingBottom="20dp"
    android:gravity="center"
    android:textColor="#000000"
    android:layout_alignRight="@+id/eventName"
    android:layout_alignEnd="@+id/eventName" />

<TextView
    android:id="@+id/endDate"
    android:paddingTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/startDate"
    android:drawablePadding="15dp"
    android:textSize="17sp"
    android:paddingBottom="20dp"
    android:gravity="center"
    android:textColor="#000000"
    android:layout_alignRight="@+id/startDate"
    android:layout_alignEnd="@+id/startDate" />

<TextView
    android:id="@+id/endTime"
    android:paddingTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="17sp"
    android:paddingBottom="20dp"
    android:gravity="center"
    android:textColor="#000000"
    android:layout_below="@id/startTime"
    android:layout_alignRight="@+id/eventName"
    android:layout_alignEnd="@+id/eventName" />


<EditText
    android:id="@+id/location"
    android:paddingTop="20dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:drawablePadding="15dp"
    android:drawableLeft="@drawable/location"
    android:paddingBottom="20dp"
    android:layout_below="@id/endDate"
    android:hint="Location"
    />

<EditText
    android:id="@+id/description"
    android:paddingTop="20dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:drawablePadding="15dp"
    android:drawableLeft="@drawable/description"
    android:paddingBottom="20dp"
    android:layout_below="@id/location"
    android:hint="Event Description"
    android:inputType="textMultiLine"
    android:minLines="4"
    android:maxLines="4"
    />

<EditText
    android:id="@+id/image"
    android:paddingTop="20dp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:drawablePadding="15dp"
    android:drawableLeft="@drawable/image"
    android:paddingBottom="20dp"
    android:layout_below="@id/description"
    android:hint="Add image"
    android:editable="false"
    />


</RelativeLayout>