<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/particular_ent_activity_fragment" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".ParticularEntActivity"
    android:id="@+id/SCROLLER_ID"
    android:scrollbars="vertical"
    android:layout_below="@+id/eventName"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/eventDate"
        android:layout_below="@+id/toolbar_holder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="12dp"
        android:text="Event Date:"
        android:textStyle="bold"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/eventDateDescription"
            android:layout_below="@+id/eventDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="15dp"
            android:text="22/03"
            android:layout_marginTop="-30dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/eventTime"
            android:layout_below="@+id/eventDateDescription"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="12dp"
            android:text="Event Time:"
            android:textStyle="bold"
            android:layout_marginTop="-20dp"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/eventTimeDescription"
            android:layout_below="@+id/eventTime"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="15dp"
            android:text="17:03"
            android:layout_marginTop="-30dp" />
        <TextView
            android:layout_width="fill_parent"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/about"
            android:layout_below="@+id/eventTimeDescription"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="12dp"
            android:text="@string/about"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginTop="-20dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/eventDescription"
        android:layout_below="@+id/about"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="15dp"
        android:text=""
        android:layout_marginTop="-30dp"/>
    <!--android:padding="12dp"-->
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>