<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android.support.design="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:name="com.example.cmcdona2.theresgoodboostonight.SocietyPicture"
        android:id="@+id/myImgView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/buttonHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A0000000"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/directions_btn"
                android:text="@string/directions"
                android:layout_gravity="center"
                android:width="65dp"
                android:id="@+id/getDirections"
                />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="25dp"
                android:width="65dp"
                android:src="@drawable/calendar_btn"
                android:text="Notify"
                android:layout_gravity="center"
                android:id="@+id/going"
                 />
        </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:width="65dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/favourite_btn"
                android:text="Notify"
                android:layout_gravity="center"
                android:id="@+id/fav"
                />
            </LinearLayout>



    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/placeNameHolder"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:transitionName="tNameHolder">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/eventName"
            android:text=""
            android:layout_below="@+id/myImgView"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="16dp"
            android:src="@drawable/icn_add"
            android:elevation="@dimen/button_elevation"
            android:contentDescription="@null"/>
            <!--android:background="@drawable/btn_background"-->

    </FrameLayout>

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:paddingTop="15dp"
        android:layout_below="@+id/eventName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fillViewport="true">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/eventDescription"
            android:padding="12dp"
            android:layout_below="@+id/eventName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="" />
    </ScrollView>
</LinearLayout>