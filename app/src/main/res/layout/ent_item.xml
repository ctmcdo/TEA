<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="78dp"
    android:background="@drawable/textured_background">
    <ImageView
        android:id="@+id/event_poster"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/event_title"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/event_poster"
        android:text="This is event name"
        android:gravity="center"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/event_timming"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/event_title"
        android:text="this is timmings"
        android:gravity="center"
        android:textColor="#000000"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/event_poster"
        ></View>

</RelativeLayout>