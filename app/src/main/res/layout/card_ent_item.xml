<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="1dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:id="@+id/cv"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            >

            <ImageView
                android:id="@+id/event_poster"
                android:layout_width="100dp"
                android:layout_height="106dp"
                android:scaleType="centerCrop"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" />
            <TextView
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/event_poster"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:text="This is event name"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#000000"
                android:singleLine="false"
                android:maxLines="3"
                android:layout_alignTop="@+id/event_poster"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/event_timming"
                android:layout_width="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_title"
                android:layout_toRightOf="@+id/event_poster"
                android:lineSpacingExtra="1dp"
                android:text="10/02 | 19:15"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_alignBottom="@+id/event_poster"
                android:layout_marginTop="-2dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>